<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.highmobility.digitalkey">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".broadcast.LinkView"
            android:parentActivityName=".broadcast.BroadcastActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.highmobility.digitalkey.broadcast.BroadcastActivity" />
        </activity>

        <activity android:name=".broadcast.BroadcastActivity"> </activity>

        <activity android:name=".scan.ScanActivity"> </activity>
        <activity android:name=".scan.ScannedLinkActivity"> </activity>

    </application>

</manifest>
